<% include ./partials/headers.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-zinc-300 items-center justify-center">
    <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
      <div class="w-[55vw] h-[69vh] bg-white px-20 py-10 rounded-[40px]">
        <h1 class="text-3xl mb-8 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none ">Crea una nueva cuenta.</h1>
        <form action="/register" method="post">
          <input class="border-2 rounded-full w-full px-3 py-2" type="text" name="username" placeholder="username">
          <input class="border-2 rounded-full w-full px-3 py-2" type="text" name="fullname" placeholder="Nombre completo">
          <input class="border-2 rounded-full w-full px-3 py-2" type="email" name="email" placeholder="email">
          <input class="border-2 rounded-full w-full px-3 py-2" type="number" name="Contact" placeholder="Contacto">
          <input class="border-2 rounded-full w-full px-3 py-2" type="password" name="password" placeholder="password">
          <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Crear nueva cuenta">
